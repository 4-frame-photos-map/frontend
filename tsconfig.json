{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false /* 'any' 타입으로 구현된 표현식 혹은 정의 에러처리 여부 */,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types", "src/apis/*/*.d.ts", "src/@types/*"],
    "types": ["@types/jest", "@types/testing-library__jest-dom"],
    "paths": {
      "@components/*": ["./components/*"],
      "@apis/*": ["./apis/*"],
      "@styles/*": ["./styles/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@public/*": ["../public/*"],
      "@config": ["../config.ts"],
      "@recoil/*": ["./recoil/*"],
      "@constants/*": ["./constants/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
